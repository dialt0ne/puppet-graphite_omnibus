<%
    #rules = scope.lookupvar('graphite_omnibus::config::relay_rules')
    rules = @relay_rules
    if rules
        rules.sort.each do |section, params| %>
[<%= section %>]
        <%- params.sort.each do |key, value| -%>
            <%- if value.kind_of?(Array) -%>
<%= key %> = <%= value.join(', ') %>
            <%- else -%>
<%= key %> = <%= value %>
            <%- end -%>
        <%- end -%>
    <%- end -%>
<%- end %>
